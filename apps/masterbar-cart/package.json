	"description": "WordPress.com Masterbar Shopping Cart",
	"main": "dist/build.min.js",
	"sideEffects": true,
	"repository": {
		"type": "git",
		"url": "git://github.com/Automattic/wp-calypso.git",
		"directory": "apps/master-bar-cart"
	},
	"private": true,
