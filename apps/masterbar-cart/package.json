		"wpcom-xhr-request": "^1.2.0"
	},
	"devDependencies": {
		"@automattic/calypso-build": "^9.0.0",
		"autoprefixer": "^10.2.5",
		"enzyme": "^3.11.0",
		"html-webpack-plugin": "^5.0.0-beta.4",
		"jest": "^27.0.6",
		"postcss": "^8.2.6",
